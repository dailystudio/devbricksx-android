<?xml version="1.0" encoding="utf-8"?>

<resources
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<style name="DefaultText">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textSize">@dimen/default_font_size</item>
	</style>

	<style name="DefaultLabel">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/light_black</item>
		<item name="android:textSize">@dimen/default_font_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/default_label_padding</item>
	</style>

	<style name="DefaultTitleText">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/default_title_font_size</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingBottom">@dimen/default_title_bottom_padding</item>
	</style>

	<style name="DefaultEditText">
		<item name="android:textSize">@dimen/default_font_size</item>
	</style>

	<style name="DefaultScrollView">
		<item name="android:scrollbarStyle">insideOverlay</item>
	</style>
			
	<style name="DefaultAdapterView" parent="DefaultScrollView">
		<item name="android:clipChildren">false</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:cacheColorHint">@color/transparent</item>
		<item name="android:persistentDrawingCache">animation|scrolling</item>
	</style>

	<style name="DefaultRecyclerView" parent="DefaultAdapterView">
		<item name="android:padding">@dimen/lv_content_padding</item>
	</style>

	<style name="DefaultListIcon">
		<item name="android:layout_width">@dimen/lv_item_icon_size</item>
		<item name="android:layout_height">@dimen/lv_item_icon_size</item>
		<item name="android:paddingStart">@dimen/lv_item_icon_padding</item>
		<item name="android:paddingEnd">@dimen/lv_item_icon_padding</item>
	</style>

	<style name="DefaultListItemText" parent="DefaultText">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">@dimen/lv_item_font_size</item>
		<item name="android:padding">@dimen/lv_item_padding</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="DefaultListItemText1stLine" parent="DefaultListItemText">
		<item name="android:paddingLeft">@dimen/lv_item_padding</item>
		<item name="android:paddingRight">@dimen/lv_item_padding</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
	</style>

	<style name="DefaultListItemText2ndLine">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:textSize">@dimen/lv_item_2nd_font_size</item>
		<item name="android:paddingLeft">@dimen/lv_item_padding</item>
		<item name="android:paddingRight">@dimen/lv_item_padding</item>
		<item name="android:paddingTop">@dimen/lv_item_2nd_padding_v</item>
		<item name="android:paddingBottom">@dimen/lv_item_2nd_padding_v</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="DefaultCardView">
		<item name="cardCornerRadius">5dp</item>
		<item name="cardElevation">3dp</item>
		<item name="cardUseCompatPadding">true</item>
	</style>

	<style name="DefaultCardViewMedia">
		<item name="android:scaleType">centerCrop</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/card_media_height</item>
	</style>

	<style name="DefaultCardViewTitle">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/card_title_font_size</item>
		<item name="android:textColor">@color/card_title_text_color</item>
		<item name="android:background">@color/card_text_background_color</item>
		<item name="android:paddingStart">@dimen/card_content_outer_padding</item>
		<item name="android:paddingEnd">@dimen/card_content_outer_padding</item>
		<item name="android:paddingTop">@dimen/card_content_outer_padding</item>
		<item name="android:paddingBottom">@dimen/card_content_outer_padding</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="DefaultCardViewSupportingText">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">@dimen/card_supporting_text_font_size</item>
		<item name="android:lineSpacingExtra">@dimen/card_supporting_text_line_height</item>
		<item name="android:textColor">@color/card_supporting_text_color</item>
		<item name="android:background">@color/card_text_background_color</item>
		<item name="android:paddingTop">@dimen/card_content_inner_padding</item>
		<item name="android:paddingStart">@dimen/card_content_outer_padding</item>
		<item name="android:paddingEnd">@dimen/card_content_outer_padding</item>
		<item name="android:paddingBottom">@dimen/card_content_outer_padding</item>
		<item name="android:maxLines">3</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="InformativeCardViewMedia" parent="DefaultCardViewMedia">
		<item name="android:layout_height">@dimen/card_media_height_informative</item>
	</style>

	<style name="InformativeCardViewTitle" parent="DefaultCardViewTitle">
		<item name="android:paddingBottom">@dimen/card_content_inner_padding</item>
	</style>

	<style name="InformativeCardViewSupportingText" parent="DefaultCardViewSupportingText">
		<item name="android:maxLines">6</item>
	</style>

	<style name="DefaultEmptyText" parent="DefaultLabel">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/light_gray</item>
		<item name="android:textSize">@dimen/default_empty_text_font_size</item>
		<item name="android:textStyle">bold|italic</item>
	</style>

	<style name="DefaultPromptText">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/tomato_red</item>
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:padding">@dimen/default_prompt_padding</item>
		<item name="android:textSize">@dimen/default_prompt_text_font_size</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="DefaultPageTitle" parent="DefaultLabel">
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">@dimen/default_font_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingStart">@dimen/page_content_outer_padding</item>
		<item name="android:paddingEnd">@dimen/page_content_outer_padding</item>
		<item name="android:paddingTop">@dimen/page_content_outer_padding</item>
		<item name="android:paddingBottom">@dimen/page_content_outer_padding</item>
	</style>

	<style name="DefaultPageDescription">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/light_white</item>
		<item name="android:textSize">@dimen/page_description_font_size</item>
		<item name="android:paddingStart">@dimen/page_content_outer_padding</item>
		<item name="android:paddingEnd">@dimen/page_content_outer_padding</item>
		<item name="android:paddingTop">@dimen/page_content_inner_padding</item>
		<item name="android:paddingBottom">@dimen/page_content_outer_padding</item>
	</style>

</resources>