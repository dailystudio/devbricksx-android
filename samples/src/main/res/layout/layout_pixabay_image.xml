<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:paddingStart="@dimen/lv_item_space_h"
	android:paddingEnd="@dimen/lv_item_space_h"
	android:paddingTop="@dimen/lv_item_space_v"
	android:paddingBottom="@dimen/lv_item_space_v"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/list_item_root"
		style="@style/DefaultCardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FrameLayout
			android:background="@color/black"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/loading"
				android:text="@string/prompt_pixabay"
				style="@style/PixabayPromptText"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/card_media_height_immersive"/>

			<ImageView
				android:id="@+id/card_media"
				android:src="@color/black"
				android:foreground="?attr/selectableItemBackground"
				style="@style/ImmersiveCardViewMedia"/>

			<TextView
				android:id="@+id/card_title"
				style="@style/ImmersiveCardViewTitle"
				android:layout_gravity="bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

		</FrameLayout>

	</androidx.cardview.widget.CardView>


</FrameLayout>
