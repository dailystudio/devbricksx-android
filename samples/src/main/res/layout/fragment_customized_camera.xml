<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_container"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_camera_preview"/>
    <include layout="@layout/layout_camera_len_selector"/>

    <Button
        android:id="@+id/camera_capture"
        android:text="@string/label_capture"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_content_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include layout="@layout/layout_permission_prompt"/>

</RelativeLayout>