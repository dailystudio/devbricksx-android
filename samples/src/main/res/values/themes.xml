<resources>

    <!-- Base application theme. -->
    <style name="Theme.Samples" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>

        <item name="statusBarBackground">@color/primaryColor</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <!-- Change the background color of the AppBarLayout so the AppBarLayout is green.
                The toolbar is transparent by default so you will see this color through the toolbar. -->
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>

        <item name="colorControlActivated">#FFffffff</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ChatText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="DemoText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/demo_text_padding</item>
        <item name="android:paddingTop">@dimen/demo_text_padding</item>
        <item name="android:paddingBottom">@dimen/demo_text_padding</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="DemoTextNormal" parent="DemoText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DemoTextItalic" parent="DemoText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DemoTextBold" parent="DemoText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DemoTextItalicBold" parent="DemoText">
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="AttributeText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/attribute_font_size</item>
        <item name="android:padding">@dimen/attribute_text_padding</item>
    </style>

    <style name="PixabayImageTitleText" parent="ImmersiveCardViewTitle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/pixabay_image_title_font_size</item>
    </style>

    <style name="PixabayPromptText">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/pixabay_image_prompt_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="JackNameText" parent="DefaultLabel">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

</resources>
