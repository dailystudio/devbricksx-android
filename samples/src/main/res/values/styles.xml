<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChatText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="DemoText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/demo_text_padding</item>
        <item name="android:paddingTop">@dimen/demo_text_padding</item>
        <item name="android:paddingBottom">@dimen/demo_text_padding</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="DemoTextNormal" parent="DemoText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DemoTextItalic" parent="DemoText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DemoTextBold" parent="DemoText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DemoTextItalicBold" parent="DemoText">
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="AttributeText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/attribute_font_size</item>
        <item name="android:padding">@dimen/attribute_text_padding</item>
    </style>

</resources>
