<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_capture_layout"
    android:background="@drawable/capture_button_bg"
    android:padding="10dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/camera_capture_button_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/camera_capture"
        android:src="@drawable/capture_button"
        android:tint="@color/action_icon_tint"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_width="@dimen/capture_button_outer_size"
        android:layout_height="@dimen/capture_button_outer_size"/>

</FrameLayout>