<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleInput" parent="DefaultEditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:hint">@string/hint_title</item>
    </style>

    <style name="DescInput" parent="DefaultEditText">
        <item name="android:gravity">start|top</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:hint">@string/hint_content</item>
    </style>

    <style name="NotesCount">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/lv_item_2nd_font_size</item>
        <item name="android:paddingLeft">@dimen/lv_item_padding</item>
        <item name="android:paddingRight">@dimen/default_content_padding</item>
        <item name="android:paddingTop">@dimen/lv_item_2nd_padding_v</item>
        <item name="android:paddingBottom">@dimen/lv_item_2nd_padding_v</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoteContent" parent="InformativeCardViewSupportingText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/lv_item_2nd_font_size</item>
    </style>

</resources>
