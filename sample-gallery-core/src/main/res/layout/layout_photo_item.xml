<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/photo_item_padding_h"
    android:paddingEnd="@dimen/photo_item_padding_h"
    android:paddingTop="@dimen/photo_item_padding_v"
    android:paddingBottom="@dimen/photo_item_padding_h"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_item_root"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_media"
                android:foreground="?attr/selectableItemBackground"
                style="@style/ImmersiveCardViewMedia"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--

                <TextView
                    android:id="@+id/card_supporting_text"
                    style="@style/PhotoItemSupportingText"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/photo_item_supporting_height"/>
-->

                <TextView
                    android:id="@+id/card_title"
                    style="@style/PhotoItemTitle"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/photo_item_title_height"/>

            </RelativeLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
